<p>Hi, there! Welcome to room <%= @room_id %></p>


<div id="chat-container">
    <div id="chat-messages" phx-update="append">
        <%= for message <- @messages do %>
            <p id="<%= message.uuid %>"><%= message.content %></p>
        <% end %>
    </div>

    <%= f = form_for :message_form, "#", id: "chat-form", phx_submit: :submit_message %>
        <%= text_input f, :message, placeholder: "Type a message..." %>
</div>
